<h2>Movies!</h2>

<ul>
  {{#each articles}}
  {{#unless favorite}}
  {{> articles/articles-block favorite=false}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Favorite Movies!</h2>

<ul>
  {{#each articles}}
  {{#if favorite}}
  {{> articles/articles-block favorite=true}}
  {{/if}}
  {{/each}}
</ul>

